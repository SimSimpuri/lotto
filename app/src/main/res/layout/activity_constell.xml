<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstellActivity">

    <Button
        android:id="@+id/goResultBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="번호확인"
        />

    <DatePicker
        android:id="@+id/dataPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:scrollbarSize="10dp"></DatePicker>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/goResultBt"
        android:layout_below="@id/dataPicker"
        app:srcCompat="@drawable/constellation"
        android:layout_margin="16dp"
        ></ImageView>

    <TextView
        android:id="@+id/constelltxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center"
        android:maxLines="1"
        android:text="쌍둥이자리"
        android:textColor="#000000"
        android:textSize="30dp"></TextView>


</RelativeLayout>